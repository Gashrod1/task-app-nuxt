    }
  },
  "dependencies": {
    "@nuxtjs/auth": "^4.8.1",
    "@nuxtjs/axios": "^5.6.0",
    "cross-env": "^5.2.1",
    "express": "^4.17.1",
    "mongoose": "^5.6.12",
    "nuxt": "^2.9.2",
    "serve-static": "^1.14.1",
    "vuelidate": "^0.7.4",
    "vuetify": "^2.0.14"
  },
  "devDependencies": {
    "@mdi/font": "^4.2.95",
    "@nuxtjs/eslint-config": "^1.1.2",
    "@nuxtjs/eslint-module": "^1.0.0",
    "@vue/test-utils": "^1.0.0-beta.27",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "eslint": "^6.3.0",
    "eslint-config-prettier": "^6.2.0",
    "eslint-plugin-nuxt": ">=0.4.3",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.0.5",
    "jest": "^24.9.0",
    "lint-staged": "^9.2.5",
    "nodemon": "^1.19.2",
    "prettier": "^1.18.2",
    "vue-jest": "^4.0.0-0"
  }
